<section>
    <div class="container">
        <div class="row mt-4">
            <a href="add-students" class="btn btn-success ml-auto">Add Students</a>
        </div>
<table class="table mt-5">
    <h1 class="text-center">STUDENTS DETAILS</h1>
    
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Class</th>
      <th scope="col">Division</th>
      <th scope="col">Age</th>
      <th scope="col">Image</th>
       <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>

    {{#each students}}
    <tr>
      <td>{{this.Name}}</td>
      <td>{{this.Class}}</td>
      <td>{{this.Division}}</td>
      <td>{{this.Age}}</td>
      <td><img src="{{this._id}}.jpg" alt="image" style="width: 50px; height: 50px;"></td>
      <td><a href="/edit-student/{{this._id}}" class="btn btn-primary">Edit</a></td>
      <td><a href="/delete-student/{{this._id}}" class="btn btn-danger" onclick="return confirm(`Are you want  to delete {{this.Name}}?`)" >Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
</section>