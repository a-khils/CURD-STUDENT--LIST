<section>
  <div class="container mt-4">
    <div class="row">
     
     <div class="col-md-6 pd-2">
        <h2 class="text-center">Edit student</h2>
      <form action="/edit-student/{{student._id}}" method="post" enctype="multipart/form-data">
        <label for="">Name</label>
          <input type="text" class="form-control" name="Name" value="{{student.Name}}">
          <label for="">Class</label>
          <input type="number" class="form-control" name="Class" value="{{student.Class}}">

          <label for="">Division</label>
          <input type="text" class="form-control" name="Division" value="{{student.Division}}">

          <label for="">Age</label>
          <input type="number" class="form-control" name="Age" value="{{student.Age}}">
          
          <img src="/images/{{student._id}}.jpg" alt="" style="height: auto; width: 100px;" id="imgView" class="pt-3">
          <label for="">Image</label>
          <input type="file" class="form-control" name="Image" onchange="viewImage(event)">

        <button type="submit" class="btn btn-success mt-4">Submit</button>
      </form>
    </div>
    </div>
  </div>
</section>

<script>
  function viewImage(event){
    document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])

  }
</script>